<p id="notice"><%= notice %></p>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Remind me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.title %></td>
        <td><%= reminder.description %></td>
        <td><%= l reminder.date, format: :short%></td>
        <td><%= l reminder.remind_me, format: :short%></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to 'Show', reminder, class:"btn btn-primary" %>
            <%= link_to 'Edit', edit_reminder_path(reminder), class:"btn btn-default" %>
            <%= link_to 'Destroy', reminder, {method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"} %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path, class:"btn btn-primary" %>
